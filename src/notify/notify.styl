$notification-color = rgb(220, 220, 220)
$notification-color__hover = white
$notification-max-width = 300px

#notifications
  margin 0 1%
  position fixed
  top 0
  right 0
  height 100vh
  overflow hidden
  background transparent
  z-index 100
  min-width $notification-max-width
  max-width $notification-max-width
  box-sizing border-box
  padding 0

  &[data-detailed]
    max-width 88%
    transition max-width 1s ease
  &[data-detailed] .notification:not([data-detailed])
    width $notification-max-width

.notification
  background rgba(25, 25, 25, .7)
  margin-top 20px
  box-sizing border-box
  padding 1rem
  visibility visible
  display flex
  border-radius 5px
  margin-left auto
  width 100%

  &:hover .notification__text,
  &:hover .notification__close-button
    color $notification-color__hover

.notification__text
  flex 1
  color $notification-color
  padding-top 7px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  font-family monospace

.notification__close-button
  text-align right
  margin-left 10px
  border none
  outline none
  font-size 1.5rem
  font-weight bold
  background transparent
  color $notification-color
  cursor pointer
