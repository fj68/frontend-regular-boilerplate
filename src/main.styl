
@import "notify/notify"

body
  margin 0
  padding 0
  width 100%
  height 100vh
  background rgba(200, 200, 200, .2)

$header-height = 35vh

header
  margin 0
  background #dadada
  color white
  width 100%
  height $header-height
  padding-left 5%

h1
  margin:0
  line-height $header-height
  padding-bottom 0
  vertical-align bottom
  font-family monospace

main
  margin 5rem 5% 5rem

section
  margin 2rem 0

section > h2
  font-size 1.2rem
  color rgba(0, 0, 0, .87)
  margin-bottom 2rem

section > p,
section > ul
section > code
  margin-left 5px
  font-family monospace
  font-size 1.1em

$code-color = rgba(0, 0, 0, .1)

var
  font-style normal
  color rgba(0, 0, 0, .87)
  background $code-color
  padding 0 2px 1px
  font-family monospace
  border-radius 3px
  font-size 1em

code
  display block
  padding 10px
  font-size 1.1em
  line-height 1.5
  background $code-color
  border-radius 5px

ul
  list-style none
  margin 0
  padding 0

li
  line-height 2

$link-color = rgba(0, 0, 0, .74)

a
  text-decoration none
  color $link-color
  padding-bottom 2px
  border-bottom 1px dotted transparent

a:hover
  border-bottom-color $link-color
